<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    tools:context="com.example.parsetest.WriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/writetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="숙소 리뷰 등록"
            android:textColor="#1C0202"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titletitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/write_title_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="글의 제목을 입력하세요."
            android:maxLength="20"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nametitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/write_name_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="이름을 입력하세요."
            android:maxLength="10"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hoteltitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="호텔명"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/write_hotel_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="호텔명을 입력하세요."
            android:maxLength="15"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/searchListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_back" />

    </LinearLayout>

    <TextView
        android:id="@+id/contenttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/write_contents_edit"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@null"
        android:gravity="top|left"
        android:hint="내용을 입력하세요(40자수 제한)"
        android:maxLength="40"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blank_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/wirte_upload_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="등록"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="취소"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>